{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block body %}

{{ include("partials/title_section.html.twig", {'name':'réinitialiser le mot de passe'}) }}

<div class="login_register_wrap section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-md-10">
                <div class="login_wrap">
                    <div class="padding_eight_all bg-white">
                        <div class="heading_s1">
                            <h3>réinitialiser le mot de passe</h3>
                        </div>
                        <div class="content">
                            <div class="message-flash">
                                {% for flashError in app.flashes('reset_password_error') %}
                                    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                                {% endfor %}
                            </div>
                            {{ form_start(requestForm) }}
                                {{ form_row(requestForm.email) }}
                                <div>
                                    <small>
                                       
                                        Entrez votre adresse e-mail et nous vous enverrons un
                                        lien pour réinitialiser votre mot de passe.
                                    </small>
                                </div>

                                <button class="btn btn-fill-out btn-block">Envoyer un e-mail de réinitialisation de mot de passe</button>
                            {{ form_end(requestForm) }}
                        </div>
                        <div class="form-note text-center">Créer un nouveau compte? <a href="{{ path('app_register')}}">Inscription</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}